<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search">
        <h4 class="mb-2">尋找餐廳：</h4>
        <div class="input-group">
          <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..."
            value="" aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

<!--classification-->
<div class="container mt-5">
  <div class="d-flex justify-content-center">
    <a class="btn btn-major mx-3" href="/search?keyword=義式餐廳" role="button">義式餐廳</a>
    <a class="btn btn-major mx-3" href="/search?keyword=中東料理" role="button">中東料理</a>
    <a class="btn btn-major mx-3" href="/search?keyword=日本料理" role="button">日本料理</a>
    <a class="btn btn-major mx-3" href="/search?keyword=美式" role="button">美式</a>
    <a class="btn btn-major mx-3" href="/search?keyword=咖啡" role="button">咖啡</a>
    <a class="btn btn-major mx-3" href="/search?keyword=酒吧" role="button">酒吧</a>
  </div>
</div>
<!-- restaurant list -->
<div class="container mt-5">
  <div class="col-md-10 col-12 mx-auto">
    <div class="row">
      {{#each restaurant}}
      <div class="col-sm-4">
        <a href="/restaurants/{{this.id}}" class="text-secondary">
          <div class="card mb-3">
            <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
            <div class="card-body p-3">
              <h6 class="card-title mb-1">{{this.name}}</h6>

              <div class="restaurant-category mb-1">
                <i class="fas fa-utensils pr-2"></i> {{this.category}}
              </div>

              <span class="badge badge-pill badge-danger font-weight-normal">
                {{this.rating}}
                <i class="fas fa-star fa-xs"></i>
              </span>

            </div>
          </div>
        </a>
      </div>
      {{/each}}
    </div>
  </div>
</div>

{{!--如果沒有搜尋結果 --}}
<div class="d-flex justify-content-center">
  <h1>
    {{noSearchResult}}
  </h1>
</div>